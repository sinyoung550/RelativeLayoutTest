<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_base"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Base Widget"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/btn_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button01"
        android:layout_toLeftOf="@+id/btn_base"
        android:layout_alignTop="@+id/btn_base"
        />
    <Button
        android:id="@+id/btn_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button02"
        android:layout_below="@+id/btn_01"
        android:layout_toLeftOf="@+id/btn_base"

        />
    <Button
        android:id="@+id/btn_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button03"
        android:layout_below="@+id/btn_02"
        android:layout_toLeftOf="@+id/btn_base"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button04"
        android:layout_above="@+id/btn_base"
        android:layout_alignLeft="@+id/btn_base"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button05"
        android:layout_below="@+id/btn_base"
        android:layout_alignRight="@+id/btn_base"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button06"
        android:layout_above="@+id/btn_base"
        android:layout_toRightOf="@+id/btn_base"

        />
</RelativeLayout>
